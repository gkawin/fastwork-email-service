{
  "name": "email-service",
  "version": "1.0.0",
  "typing": "./typings/index.d.ts",
  "main": "./dist/index.js",
  "author": "Kawin Glomjai <g.kawin@live.com>",
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production && yarn clean && tsc",
