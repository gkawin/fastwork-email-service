    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "mongodb": "^3.1.10",
    "ramda": "^0.26.0",
    "rxjs": "^6.3.3",
    "sparkpost": "^2.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/mongodb": "^3.1.14",
    "@types/ramda": "^0.25.42",
    "@types/sparkpost": "^2.1.4",
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.6"
  }
